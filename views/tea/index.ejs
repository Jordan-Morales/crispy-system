<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <% include ../partials/head.ejs %>
</head>
<body>
  <% include ../partials/header.ejs %>
  <div class="container">
    <h1>Our Collection of Tea</h1>
    <div class="row">
      <% for (let i = 0; i < tea.length; i++) { %>
        <div class="col s4">
          <div class="card light-green darken-2">
              <div class="card-image">
              <a class="grey-text" href="/tea/<%=tea[i].id%>">
                <img src="<%=tea[i].img%>" alt="<%=tea[i].name%>">
                <span class="card-title shadow"><%=tea[i].name%></span></a>
              </div>
              <div class="card-content white-text">
              Name: <%=tea[i].name%> <br/> Type: <%=tea[i].type%>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <a href="/tea/new">Create New Tea</a>
    </div>

    <% include ../partials/footer.ejs %>
  </body>
  </html>
