<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <%- include('../partials/head.ejs'); -%>
</head>
<body>
  <%- include('../partials/header.ejs'); -%>
  <div class="container flow-text">
    <h1>All Tea's in Our Collection</h1>
    <div class="row">
      <% for (let i = 0; i < tea.length; i++) { %>
        <div class="col s4">
          <div class="card light-green darken-2 z-depth-3">
              <div class="card-image">
              <a class="grey-text" href="/tea/<%=tea[i].id%>">
                <img class="responsive-img" src="<%=tea[i].img%>" alt="<%=tea[i].name%>">
                <span class="black-text shadow"><%=tea[i].name%></span></a>
              </div>
              <form action="/addFav/<%=tea[i].id%>?_method=POST" method="POST">
                <input type="submit" value="+ Fav" class="btn blue"><i class="material-icons"></i></input>
              </form>
              <div class="card-content white-text">
              <!-- Name: <%=tea[i].name%> <br/>  -->
              Type: <%=tea[i].type%>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <a href="/tea/new">Create a New Tea to Share</a>
    </div>

    <%- include('../partials/footer.ejs'); -%>
  </body>
  </html>
